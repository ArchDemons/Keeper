<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <useStyles filename="nifty-default-styles.xml" />
    <useStyles filename="Interface/DropDownStyle.xml" />
    <useStyles filename="Interface/ScrollbarStyle.xml" />
    <useStyles filename="Interface/CheckBoxStyle.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <useControls filename="Interface/MyControls.xml" />

    <resourceBundle id="menu" filename="Interface/Texts/Text" />

    <!--<registerSound id="menuClick" filename="Sounds/Global/FE3D CLICK ON T.mp2" />-->
    <!--<registerSound id="buttonClick" filename="Sounds/Global/FE BUTTON BIG 5.mp2" />-->

    <style id="menuTextSmall">
        <attributes font="Interface/Fonts/DungeonKeeperII.fnt" color="#bbbcbb" />
    </style>
    <style id="menuText">
        <attributes font="Interface/Fonts/DungeonKeeperIIBig.fnt" color="#bbbcbb" />
        <effect>
            <onHover name="textColorAnimated" start="#bbbcbb" end="#ffffff" />
            <onClick name="playSound" sound="menuClick"/>
        </effect>
    </style>
    <style id="menuTitleText">
        <attributes font="Interface/Fonts/DungeonKeeperIIBig.fnt" color="#ff5f00" />
    </style>

    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="start" controller="toniarts.opendungeonkeeper.game.state.MainMenuState">
        <layer id="layer" childLayout="vertical">
            <panel id="panel1" height="27.9%" width="100%" childLayout="vertical">
                <panel childLayout="center" align="center" valign="center">
                    <image filename="Textures/Logo.png" />
                </panel>
            </panel>
            <panel id="panel2" height="36.875%" width="100%" align="center" valign="center" childLayout="vertical" visibleToMouse="true">
                <panel childLayout="center" align="center" valign="center">
                    <text id="singlePlayer" style="menuText" text="${menu.71}">
                        <interact onClick="goToScreen(singlePlayer)" />
                    </text>
                </panel>
                <panel childLayout="center" align="center" valign="center">
                    <text id="multiplayer" style="menuText" text="${menu.72}">
                    </text>
                </panel>
                <panel childLayout="center" align="center" valign="center">
                    <text id="mpd" style="menuText" text="${menu.1675}">
                    </text>
                </panel>
            </panel>
            <panel id="panel3" height="7%" width="100%" align="center" valign="center" childLayout="center">

            </panel>
            <panel id="panel4" height="15.208%" width="100%" align="center" valign="top" childLayout="vertical" visibleToMouse="true">
                <panel childLayout="center" align="center" valign="top">
                    <text id="options" style="menuText" text="${menu.94}">
                        <interact onClick="options()" />
                    </text>
                </panel>
                <panel childLayout="center" align="center" valign="top">
                    <text id="extras" style="menuText" text="${menu.73}">
                    </text>
                </panel>
            </panel>
            <panel id="panel5" height="5%" width="100%" align="center" valign="center" childLayout="vertical" visibleToMouse="true">
                <text id="quit" style="menuText" text="${menu.28}" align="center" valign="center">
                    <interact onClick="goToScreen(quitGame)" />
                </text>
            </panel>
            <panel id="panel6" height="*" width="100%" align="center" valign="top" childLayout="vertical">
                <panel childLayout="vertical" align="right" valign="top">
                    <text font="Interface/Fonts/DungeonKeeperII.fnt" color="#bbbcbb" text="*PRE-ALPHA*"/>
                </panel>
                <panel childLayout="vertical" align="right" valign="top">
                    <text font="Interface/Fonts/DungeonKeeperII.fnt" color="#bbbcbb" text="Open Source Edition"/>
                </panel>
            </panel>
        </layer>
    </screen>

    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- single player game -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="singlePlayer" controller="toniarts.opendungeonkeeper.game.state.MainMenuState">
        <layer id="layer" childLayout="vertical">
            <panel id="panel1" height="27.9%" width="100%" childLayout="vertical">
                <panel childLayout="center" align="center" valign="center">
                    <text id="singlePlayer" style="menuTitleText" text="${menu.71}">
                    </text>
                </panel>
            </panel>
            <panel id="panel2" height="25%" width="100%" align="center" valign="center" childLayout="vertical" visibleToMouse="true">
                <panel childLayout="center" align="center" valign="center">
                    <text id="newCampaign" style="menuText" text="${menu.140}">
                    </text>
                </panel>
                <panel childLayout="center" align="center" valign="center">
                    <text id="continueCampaign" style="menuText" text="${menu.2059}">
                        <interact onClick="continueCampaign()" />
                    </text>
                </panel>
            </panel>
            <panel id="panel3" height="5%" width="100%" align="center" valign="center" childLayout="center">

            </panel>
            <panel id="panel4" height="25%" width="100%" align="center" valign="top" childLayout="vertical" visibleToMouse="true">
                <panel childLayout="center" align="center" valign="top">
                    <text id="skirmish" style="menuText" text="${menu.141}">
                    </text>
                </panel>
                <panel childLayout="center" align="center" valign="top">
                    <text id="loadGame" style="menuText" text="${menu.145}">
                    </text>
                </panel>
            </panel>
            <panel id="panel5" height="*" width="75%" align="center" valign="center" childLayout="vertical" visibleToMouse="true">
                <panel childLayout="center" align="right" valign="bottom">
                    <control click="goToScreen(start)" id="back" name="cancelButton" width="48px" height="48px">
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>

    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- quit game -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="quitGame" controller="toniarts.opendungeonkeeper.game.state.MainMenuState">
        <layer id="layer" childLayout="vertical">
            <panel id="panel1" height="40%" width="100%" childLayout="vertical">
                <panel height="100%" childLayout="center" align="center" valign="bottom">
                    <text id="singlePlayer" style="menuTitleText" text="${menu.28}" align="center" valign="bottom">
                    </text>
                </panel>
            </panel>
            <panel id="panel2" height="38%" width="100%" align="center" valign="center" childLayout="vertical" visibleToMouse="true">
                <panel childLayout="center" align="center" valign="center">
                    <text id="newCampaign" style="menuText" text="${menu.15}">
                    </text>
                </panel>
            </panel>
            <panel id="panel3" height="*" width="75%" align="center" valign="center" childLayout="vertical" visibleToMouse="true">
                <panel childLayout="horizontal" align="right" valign="bottom">
                    <panel childLayout="center" align="right" valign="bottom" width="56px">
                        <control click="goToScreen(start)" id="back" name="cancelButton" width="48px" height="48px">
                        </control>
                    </panel>
                    <panel childLayout="center" align="right" valign="bottom" width="56px">
                        <control click="quitGame()" id="quit" name="okButton" width="48px" height="48px">
                        </control>
                    </panel>
                </panel>
            </panel>
        </layer>
    </screen>

    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- Campaign map, level selection -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="selectCampaignLevel" controller="toniarts.opendungeonkeeper.game.state.MainMenuState">
        <layer id="layer" childLayout="vertical">
            <panel id="panel1" height="78%" width="100%" childLayout="vertical">
            </panel>
            <panel id="panel2" height="*" width="75%" align="center" valign="center" childLayout="vertical" visibleToMouse="true">
                <panel childLayout="horizontal" align="right" valign="bottom">
                    <panel childLayout="center" align="right" valign="bottom" width="56px">
                        <control click="cancelCampaign()" id="back" name="cancelButton" width="48px" height="48px">
                        </control>
                    </panel>
                </panel>
            </panel>
        </layer>
    </screen>

    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- Campaign level briefing -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="campaign" controller="toniarts.opendungeonkeeper.game.state.MainMenuState">
        <layer id="layer" childLayout="vertical">
            <panel id="panel1" height="78%" width="100%" childLayout="vertical">
                <panel width="100%" childLayout="center" align="center" valign="center">
                    <text id="briefingTitle" style="menuTitleText" text="${menu.1476}">
                    </text>
                </panel>
                <panel width="100%" childLayout="center" align="center" valign="center">
                    <control name="label" id="levelTitle" style="menuTitleText">
                    </control>
                </panel>
                <panel height="5%" width="100%" childLayout="center" align="center" valign="center">

                </panel>
                <!--Main objectives-->
                <panel height="30%" width="100%" childLayout="horizontal" align="center" valign="center">
                    <panel width="33%" childLayout="center" align="center" valign="center">
                        <image align="center" valign="top" id="mainObjectiveImage" />
                    </panel>
                    <panel width="*" childLayout="vertical" align="left" valign="top">
                        <panel backgroundColor="#f508" width="100%" childLayout="vertical">
                            <text align="left" valign="top" id="mainObjectivesTitle" style="menuTitleText" text="${menu.1408}">
                            </text>
                        </panel>
                        <panel backgroundColor="#0008" width="100%" height="*" childLayout="vertical">
                            <control width="100%" name="label" style="menuTextSmall" id="mainObjective" textHAlign="left" textVAlign="top">
                            </control>
                        </panel>
                    </panel>
                </panel>
                <panel height="3%" width="100%" childLayout="center" align="center" valign="center">

                </panel>
                <!--Subobjectives-->
                <panel height="*" width="100%" childLayout="horizontal" align="center" valign="center">
                    <panel width="33%" childLayout="center" align="center" valign="center">
                        <image align="center" valign="top" id="subObjectiveImage" />
                    </panel>
                    <panel width="*" childLayout="vertical" align="left" valign="top">
                        <panel backgroundColor="#f508" width="100%" childLayout="vertical">
                            <text align="left" valign="top" id="subObjectivesTitle" style="menuTitleText" text="${menu.1409}">
                            </text>
                        </panel>
                        <panel backgroundColor="#0008" width="100%" height="*" childLayout="vertical">
                            <panel width="100%" childLayout="vertical">
                                <control width="100%" name="label" style="menuTextSmall" id="subObjective1" textHAlign="left" textVAlign="top">
                                </control>
                                <control width="100%" name="label" style="menuTextSmall" id="subObjective2" textHAlign="left" textVAlign="top">
                                </control>
                                <control width="100%" name="label" style="menuTextSmall" id="subObjective3" textHAlign="left" textVAlign="top">
                                </control>
                            </panel>
                        </panel>
                    </panel>
                </panel>
                <panel height="3%" width="100%" childLayout="center" align="center" valign="center">

                </panel>
            </panel>
            <panel id="panel2" height="*" width="75%" align="center" valign="center" childLayout="vertical" visibleToMouse="true">
                <panel childLayout="horizontal" align="right" valign="bottom">
                    <panel childLayout="center" align="right" valign="bottom" width="56px">
                        <control click="cancelLevelSelect()" id="back" name="cancelButton" width="48px" height="48px">
                        </control>
                    </panel>
                    <panel childLayout="center" align="right" valign="bottom" width="56px">
                        <control click="startCampaignLevel()" id="start" name="okButton" width="48px" height="48px">
                        </control>
                    </panel>
                </panel>
            </panel>
        </layer>
    </screen>

    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- Options, main selection -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="optionsMain" controller="toniarts.opendungeonkeeper.game.state.MainMenuState">
        <layer id="layer" childLayout="vertical">
            <panel id="panel1" height="78%" width="100%" childLayout="vertical">
                <panel width="100%" childLayout="center" align="center" valign="center">
                    <text id="optionsTitle" style="menuTitleText" text="${menu.94}">
                    </text>
                </panel>
                <panel width="100%" height="*" childLayout="center" align="center" valign="center">
                    <panel width="100%" childLayout="vertical" align="center" valign="center">
                        <text id="graphicsOptions" style="menuText" text="${menu.96}" align="center">
                            <interact onClick="goToScreen(graphicsOptions)" />
                        </text>
                        <text id="soundOptions" style="menuText" text="${menu.95}" align="center">
                        </text>
                        <text id="controlOptions" style="menuText" text="${menu.98}" align="center">
                        </text>
                    </panel>
                </panel>
            </panel>
            <panel id="panel2" height="*" width="75%" align="center" valign="center" childLayout="vertical" visibleToMouse="true">
                <panel childLayout="horizontal" align="right" valign="bottom">
                    <panel childLayout="center" align="right" valign="bottom" width="56px">
                        <control click="cancelOptionsMain()" id="back" name="cancelButton" width="48px" height="48px">
                        </control>
                    </panel>
                </panel>
            </panel>
        </layer>
    </screen>

    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- Graphic options -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="graphicsOptions" controller="toniarts.opendungeonkeeper.game.state.MainMenuState">
        <layer id="layer" childLayout="vertical">
            <panel id="panel1" height="78%" width="100%" childLayout="vertical">
                <panel width="100%" childLayout="center" align="center" valign="center">
                    <text id="briefingTitle" style="menuTitleText" text="${menu.96}">
                    </text>
                </panel>
                <panel width="100%" height="*" childLayout="center" align="center" valign="center">
                    <panel childLayout="horizontal" valign="center">
                        <!--Left side options panel-->
                        <panel childLayout="vertical" align="left" valign="top">
                            <panel align="left" valign="center" childLayout="vertical" padding="10px">
                                <text style="menuTextSmall" text="${menu.134}: "></text>
                                <control width="250px" name="dropDown" id="resolution">

                                </control>
                            </panel>
                            <panel align="left" valign="center" childLayout="horizontal" padding="10px">
                                <control name="checkbox" id="fullscreen">
                                </control>
                                <text style="menuTextSmall" text=" Fullscreen"></text>
                            </panel>
                            <panel align="left" valign="center" childLayout="vertical" padding="10px">
                                <text style="menuTextSmall" text="Antialiasing: "></text>
                                <control width="100px" name="dropDown" id="antialiasing">

                                </control>
                            </panel>
                            <panel align="left" valign="center" childLayout="vertical" padding="10px">
                                <text style="menuTextSmall" text="OpenGL: "></text>
                                <control width="250px" name="dropDown" id="openGl">

                                </control>
                            </panel>
                            <panel align="left" valign="center" childLayout="horizontal" padding="10px">
                                <control name="checkbox" id="ssao">
                                </control>
                                <text style="menuTextSmall" text=" SSAO"></text>
                            </panel>
                        </panel>
                        <!--Right side options panel-->
                        <panel  childLayout="vertical" align="right" valign="top">
                            <panel align="left" valign="center" childLayout="vertical" padding="10px">
                                <text style="menuTextSmall" text="Refresh rate: "></text>
                                <control width="100px" name="dropDown" id="refreshRate">

                                </control>
                            </panel>
                            <panel align="left" valign="center" childLayout="horizontal" padding="10px">
                                <control name="checkbox" id="verticalSync">
                                </control>
                                <text style="menuTextSmall" text=" Vertical sync"></text>
                            </panel>
                            <panel align="left" valign="center" childLayout="vertical" padding="10px">
                                <text style="menuTextSmall" text="Anisotropic filtering: "></text>
                                <control width="100px" name="dropDown" id="anisotropicFiltering">

                                </control>
                            </panel>
                        </panel>
                    </panel>
                </panel>
            </panel>
            <panel id="panel2" height="*" width="75%" align="center" valign="center" childLayout="vertical" visibleToMouse="true">
                <panel childLayout="horizontal" align="right" valign="bottom">
                    <panel childLayout="center" align="right" valign="bottom" width="56px">
                        <control click="goToScreen(optionsMain)" id="back" name="cancelButton" width="48px" height="48px">
                        </control>
                    </panel>
                    <panel childLayout="center" align="right" valign="bottom" width="56px">
                        <control click="applyGraphicsSettings()" id="start" name="okButton" width="48px" height="48px">
                        </control>
                    </panel>
                </panel>
            </panel>
        </layer>
    </screen>

</nifty>
